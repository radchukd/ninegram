<% content_for :title, "#{@user.name} (@#{@user.nickname}) â€¢ Ninegram" %>

<div class="ui center aligned segment">

  <div class="ui grid">

    <div class="four wide column">
      <% if @user.avatar_url %>
        <%= image_tag(@user.avatar_url(:thumb), class: "ui circular image") %>
      <% else %>
        <%= image_tag('user.jpg', size: "150x150", class: "ui circular image") %>
      <% end %>
    </div>

    <div class="twelve wide column">
      <div class="ui grid">

        <div class="row">
          <%= render 'header' %>
        </div>

        <div class="row">
          <%= render 'stats' %>
        </div>

        <div class="row">
          <h3><%= @user.name %></h3> 
        </div>

        <div class="row">
          <%= @user.bio %>
        </div>

      </div>
    </div>

  </div>

  <br><hr><br>

  <% if @posts.any? %>
    <div class="ui three stackable cards">
      <%= render @posts %>
    </div>
  <% end %>
</div>