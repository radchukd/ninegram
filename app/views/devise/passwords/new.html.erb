<h2 class="ui center aligned segment">Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="ui form">
    <div class="field">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  placeholder: "Email",
                  input_html: { autocomplete: "email" } %>
    </div>
    <%= f.button :submit, "Send me reset password instructions", class: "ui primary button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
